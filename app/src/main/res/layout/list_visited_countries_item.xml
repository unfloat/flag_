<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visited_country_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:padding="20dp"
    android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/visited_country_item_image"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:src="@drawable/brazil"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/visited_country_item_name"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="Brazil"
        android:layout_marginTop="30dp"

        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp" />

    <TextView
        android:id="@+id/visited_country_item_visit_date"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="20/02/2020"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
     />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="#c0c0c0"
        android:paddingTop="10dp"
        />
</RelativeLayout>
